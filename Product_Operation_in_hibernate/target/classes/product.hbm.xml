<?xml version = "1.0" encoding = "utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
"-//Hibernate/Hibernate Mapping DTD//EN"
"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd"> 

<hibernate-mapping>
   <class name = "Product_Model" table = "product">
      <id name = "product_id" type = "int" column = "product_id"></id>
      <property name = "product_Name" column = "product_name" type = "string"/>
      <property name = "Product_cat" column = "product_cat" type = "string"/>
      <property name = "price" column = "price" type = "double"/>
      <property name = "qty" column = "qty" type = "int"/>
   </class>

</hibernate-mapping>